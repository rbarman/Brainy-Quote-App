    <ListPreference
        android:key="quote_font_pref"
        android:title="Quote Font Size"
        android:summary=""
        android:entries="@array/fontSize"
        android:entryValues="@array/fontSizeValues"
        android:defaultValue="20" />
    
    <com.example.brainyquote.ClearFavsDiagPref  
